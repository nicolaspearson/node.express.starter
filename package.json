{
  "name": "node.express.starter",
  "version": "1.0.0",
  "description": "A simple Node.js API, written using Typescript and Express",
  "main": "dist/index.js",
  "author": "Nicolas Pearson",
  "repository": {
    "url": "https://github.com/nicolaspearson/node.express.starter.git",
    "type": "git"
  },
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./dist && tsc --rootDir ./src && run copy:env",
    "copy:env": "cp ./src/env/*.json ./dist/env/",
    "db:migration:create": "typeorm migration:create -n",
    "db:migration:generate:missing": "rm -rf dist && run build && run exec:script:generate-migration",
    "db:migration:generate": "typeorm migration:generate -n",
    "db:migration:revert": "typeorm migration:revert",
    "db:migration:run": "typeorm migration:run",
    "db:start": "run exec:docker-compose up -d --renew-anon-volumes --force-recreate postgres",
    "debug": "run build && run watch:debug",
    "exec:docker-compose": "docker-compose -f docker-compose.yaml",
    "exec:script:generate-migration": "./scripts/generate-migration.sh",
    "lint": "eslint --parser-options \"{ tsconfigRootDir: $(pwd), project: '$(pwd)/tsconfig.json' }\" --cache-file $(pwd)/.eslintcache $(pwd)/src",
    "ncu": "ncu",
    "ncu:u": "ncu -u",
    "start:debug": "nodemon --inspect=5858 dist/index.js",
    "start:dev": "run build && run watch",
    "start": "nodemon dist/index.js --delay 3",
    "test": "jest --passWithNoTests",
    "test:coverage": "yarn test -- --coverage",
    "test:badges": "run test:coverage && jest-coverage-badges",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"run watch:ts\" \"run start\"",
    "watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"run watch:ts\" \"run start:debug\"",
    "watch:ts": "tsc -w"
  },
  "dependencies": {
    "bcrypt": "~5.0.1",
    "body-parser": "~1.19.0",
    "boom": "~7.3.0",
    "class-transformer": "~0.4.0",
    "class-validator": "~0.13.1",
    "express": "~4.17.1",
    "jsonwebtoken": "~8.5.1",
    "module-alias": "~2.2.2",
    "nconf": "~0.11.2",
    "pg": "~8.5.1",
    "reflect-metadata": "~0.1.13",
    "typeorm": "~0.2.31",
    "winston": "~3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "~3.0.0",
    "@types/boom": "~7.3.0",
    "@types/dotenv": "~8.2.0",
    "@types/express": "~4.17.11",
    "@types/jest": "~26.0.20",
    "@types/jsonwebtoken": "~8.5.0",
    "@types/nconf": "~0.10.0",
    "@types/node": "~14.14.31",
    "@types/prettier": "~2",
    "@types/supertest": "~2.0.10",
    "@typescript-eslint/eslint-plugin": "~4.16.1",
    "@typescript-eslint/parser": "~4.16.1",
    "@yarnpkg/pnpify": "~2.4.0",
    "commitlint": "~12.0.1",
    "concurrently": "~6.0.0",
    "dotenv": "~8.2.0",
    "eslint": "~7.21.0",
    "eslint-config-prettier": "~8.1.0",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-jest": "~24.1.5",
    "eslint-plugin-ordered-imports": "~0.4.1",
    "eslint-plugin-prettier": "~3.3.1",
    "husky": "~5.1.3",
    "jest": "~26.6.3",
    "jest-coverage-badges": "~1.1.2",
    "logform": "~2.2.0",
    "nodemon": "~2.0.7",
    "npm-check-updates": "~11.1.10",
    "prettier": "~2.2.1",
    "pretty-quick": "~3.1.0",
    "supertest": "~6.1.3",
    "ts-jest": "~26.5.3",
    "ts-node": "~9.1.1",
    "typescript": "~4.2.3"
  },
  "_moduleAliases": {
    "@": "dist",
    "#": "test"
  }
}
