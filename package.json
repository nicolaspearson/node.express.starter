{
  "name": "node.express.starter",
  "version": "1.0.0",
  "description": "A simple Node.js API, written using Typescript and Express",
  "main": "dist/index.js",
  "author": "Nicolas Pearson",
  "repository": {
    "url": "https://github.com/nicolaspearson/node.express.starter.git",
    "type": "git"
  },
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "rm -rf ./dist && npm run build:ts && npm run tslint && npm run copy:env",
    "build:ts": "tsc --rootDir ./src/",
    "debug": "npm run build && npm run watch:debug",
    "serve": "nodemon dist/index.js --delay 3",
    "serve:debug": "nodemon --inspect=5858 dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run serve\"",
    "watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run serve:debug\"",
    "watch:ts": "tsc -w",
    "tslint": "tslint --fix -c tslint.json -p tsconfig.json",
    "clean": "rm -rf node_modules && npm install",
    "copy:env": "cp ./src/env/*.json ./dist/env/",
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "test:badges": "npm run test:coverage && jest-coverage-badges",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./src/db/config.db.ts",
    "ncu": "ncu",
    "ncu:u": "ncu -u"
  },
  "dependencies": {
    "bcrypt": "~5.0.1",
    "body-parser": "~1.19.0",
    "boom": "~7.3.0",
    "class-transformer": "~0.4.0",
    "class-validator": "~0.13.1",
    "express": "~4.17.1",
    "jsonwebtoken": "~8.5.1",
    "module-alias": "~2.2.2",
    "nconf": "~0.11.2",
    "pg": "~8.5.1",
    "reflect-metadata": "~0.1.13",
    "typeorm": "~0.2.31",
    "winston": "~3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "~3.0.0",
    "@types/boom": "~7.3.0",
    "@types/dotenv": "~8.2.0",
    "@types/express": "~4.17.11",
    "@types/jest": "~26.0.20",
    "@types/jsonwebtoken": "~8.5.0",
    "@types/nconf": "~0.10.0",
    "@types/node": "~14.14.31",
    "@types/supertest": "~2.0.10",
    "concurrently": "~6.0.0",
    "dotenv": "~8.2.0",
    "jest": "~26.6.3",
    "jest-coverage-badges": "~1.1.2",
    "nodemon": "~2.0.7",
    "npm-check-updates": "~11.1.10",
    "supertest": "~6.1.3",
    "ts-jest": "~26.5.3",
    "ts-node": "~9.1.1",
    "tslint": "~6.1.3",
    "typescript": "~4.2.3"
  },
  "_moduleAliases": {
    "@app": "dist/app",
    "@controllers": "dist/controllers",
    "@db": "dist/db",
    "@dto": "dist/dto",
    "@entities": "dist/entities",
    "@env": "dist/env/index",
    "@interfaces": "dist/interfaces",
    "@logger": "dist/logger/index",
    "@middleware": "dist/middleware",
    "@repositories": "dist/repositories",
    "@services": "dist/services",
    "@utils": "dist/utils"
  }
}
