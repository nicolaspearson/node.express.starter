{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["test/*"]
    },
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "esnext",
    "typeRoots": ["types"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "types/**/*.d.ts"],
  "exclude": [".yarn", "dist", "**/*.js"]
}
